{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "declaration": true,
        "experimentalDecorators": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": ".",
        "lib": ["es6", "dom", "es2017.iterable"],        
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
            "./node_modules/@nativescript/*",
            "./node_modules/*"
            ]
        },
        "emitDecoratorMetadata": true     
    },
    "files": [
        "angular/index.ts"
    ],
    "angularCompilerOptions": {
        "skipTemplateCodegen": true
    }
}