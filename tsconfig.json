{
    "compilerOptions": {
        "noEmitOnError": true,
        "noEmitHelpers": true,
        "sourceMap": false,
        "removeComments": true,
        "declaration": false,
        "experimentalDecorators": true,
        "target": "es2017",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": ".",
        "lib": ["es6", "dom", "es2017"],
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "*": [
            "./node_modules/@nativescript/*",
            "./node_modules/*"
            ]
        }
    },
    "exclude": [
        "node_modules", 
        "demo", 
        "demo-ng", 
        "bin"
    ]
}